{
"Version": "2012-10-17",
"Statement": [
{
"Sid": "MFAEnforcement",
"Effect": "Allow",
"Action": "*",
"Resource": "*",
"Condition": {
"BoolIfExists": {
"aws:MultiFactorAuthPresent": "true"
}
}
},
{
"Sid": "PreventBoundaryRemoval",
"Effect": "Deny",
"Action": [
"iam:DeleteUserPermissionsBoundary",
"iam:DeleteRolePermissionsBoundary"
],
"Resource": [
"arn:aws:iam::082826845521:role/*",
"arn:aws:iam::082826845521:user/*"
],
"Condition": {
"StringEquals": {
"iam:PermissionsBoundary": "arn:aws:iam::082826845521:policy/PermissionBoundary"
}
}
},
{
"Sid": "PermissionBoundary",
"Effect": "Deny",
"Action": [
"iam:PutRolePermissionsBoundary",
"iam:PutUserPermissionsBoundary"
],
"Resource": [
"arn:aws:iam::082826845521:role/*",
"arn:aws:iam::082826845521:user/*"
],
"Condition": {
"StringNotEquals": {
"iam:PermissionsBoundary": "arn:aws:iam::082826845521:policy/PermissionBoundary"
}
}
},
{
"Sid": "PrivilegeEsclation",
"Effect": "Deny",
"Action": [
"iam:CreateRole",
"iam:CreateUser"
],
"Resource": [
"arn:aws:iam::082826845521:role/*",
"arn:aws:iam::082826845521:user/*"
],
"Condition": {
"StringNotEquals": {
"iam:PermissionsBoundary": "arn:aws:iam::082826845521:policy/PermissionBoundary"
}
}
},
{
"Sid": "BasicLambda",
"Effect": "Deny",
"Action": "iam:PassRole",
"NotResource": "arn:aws:iam::082826845521:role/BasicLamdaRole"
},
{
"Sid": "IamProtect",
"Effect": "Deny",
"Action": [
"iam:DeletePolicy",
"iam:CreatePolicyVersion",
"iam:DeletePolicyVersion",
"iam:SetDefaultPolicyVersion",
"iam:DeleteRolePolicy",
"iam:DeleteRole"
],
"Resource": "arn:aws:iam::082826845521:policy/PermissionBoundary"
},
{
"Sid": "InstanceProtect",
"Effect": "Deny",
"Action": [
"ec2:TerminateInstances",
"ec2:StopInstances",
"rds:DeleteDBCluster",
"rds:DeleteDBInstance"
],
"Resource": "*",
"Condition": {
"StringEquals": {
"aws:ResourceTag/Termination": "No"
}
}
},
{
"Sid": "S3Protect",
"Effect": "Deny",
"Action": "s3:DeleteBucket",
"Resource": "*",
"Condition": {
"StringEquals": {
"aws:ResourceTag/Sensitive": "Yes"
}
}
}
]
}

